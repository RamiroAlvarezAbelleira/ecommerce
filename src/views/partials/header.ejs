<header>
    <div class="logo">
        <a href="/"><img id="logo" src="\images\logo3.png" alt="logo"></a>
    </div>

    <div class="mobile-buscador">
        <i class="fa-solid fa-magnifying-glass"></i>
    </div>
    <div class="buscador-y-nav">
        <form action="/productos" method="GET" id="buscador">

            <input  id="search-input" type="text" name="buscador-text-input" value="buscar">
            <button class="buscador" type="submit">
                <i class="fa-solid fa-magnifying-glass"></i>
            </button>

        </form>
        <ul class="header-sections">
            <li class="header-section"><a href="/" >HOME</a></li>
            <li class="header-section"><a href="/productos" >PRODUCTOS</a></li>
            <li class="header-section"><a href="/contacto" >CONTACTO</a></li>
            <li class="header-section"><a href="/productos/crear" >ADMIN</a></li>
        </ul>
    </div>
    
    <% if (locals.isLogged) { %>
        <div class="signup-login">
            <a href="/usuarios/profile" >Perfil</a>
            <span>|</span>
            <a href="/usuarios/logout" >Cerrar sesion</a>
        </div>
        <div class="signup-login-tablet">
            <a href="/usuarios/profile" ><i class="fa-solid fa-square-user"></i></a>
        </div>
    <% } else { %>
        <div class="signup-login">
            <a href="/usuarios/register" >Registro</a>
            <span>|</span>
            <a href="/usuarios/login" >Ingresar</a>
        </div>
        <div class="signup-login-tablet">
            <a href="/usuarios/profile" ><i class="fa-solid fa-arrow-right-to-bracket"></i></a>
        </div>
    <% } %>
    

    <div class="hamburger">
        <span class="bar"></span>
        <span class="bar"></span>
        <span class="bar"></span>
    </div>

</header>