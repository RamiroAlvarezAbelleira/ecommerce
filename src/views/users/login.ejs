<!DOCTYPE html>
<html lang="en">
    <!--HEAD-->
    
    <%- include ('../partials/head') %>  

<body class="login">
    <!--HEADER-->

    <%- include ('../partials/header') %> 

    <!--NAV-->

    <%- include ('../partials/nav') %> 
    <main class='form-background'>
        <div class="crud-main">
            <h2>Ingresar</h2>

            <form class="crud-form" action="/usuarios/login" method="POST">
                <div class="form-section">
                    <label for="email">Email:</label>
                    <input type="email" name="email" placeholder="johndow@mail.com" id="email" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$">
                    <% if (locals.errors && errors.email && errors.password) { %>
                        <div class="feedback">
                            <%= errors.email.msg %> 
                        </div>
                    <% } %>
                    <% if (locals.errors && errors.password && (!errors.email)) { %>
                        <div class="feedback">
                            <%= errors.password.msg %> 
                        </div>
                    <% } %>
                </div>
                <div class="form-section">
                    <label for="password">ContraseÃ±a:</label>
                    <input type="password" name="password" placeholder="Password" id="password" minLength="8">
                    
                </div>
                <div class="button-section">
                    <button class="submit-button" type="submit">Ingresar</button>
                </div>
            </form>
            <p>No tenes una cuenta? | <a href="/usuarios/register">Registrate</a></p>
        </div>
    </main>

    <!--FOOTER-->

    <%- include('../partials/footer')  %> 
    
</body>
</html>